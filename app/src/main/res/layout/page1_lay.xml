<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--        header        -->

    <View
        android:id="@+id/rectangle_"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#009688"
        android:clickable="false"
        app:layout_constraintTop_toTopOf="@+id/imageViewRec"
        tools:layout_editor_absoluteX="170dp" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="75dp"
        android:layout_height="88dp"

        android:background="@drawable/icon_back"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_"
        app:layout_constraintEnd_toStartOf="@+id/imageView14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_"
        app:layout_constraintStart_toStartOf="@+id/rectangle_"
        app:layout_constraintTop_toTopOf="@+id/rectangle_"
        app:srcCompat="@drawable/main_logo" />

<!--    <ImageView-->
<!--        android:id="@+id/imageViewFacebook"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginTop="16dp"-->
<!--        android:layout_marginEnd="16dp"-->
<!--        android:layout_marginRight="16dp"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="@+id/rectangle_"-->
<!--        app:srcCompat="@drawable/icon_facebook"/>-->

    <!-- -->


    <TextView
        android:id="@+id/tytul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:text="O NAS"
        android:textColor="#F44336"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectangle_" />

    <ImageView
        android:id="@+id/image_about_pic"
        android:layout_width="320dp"
        android:layout_height="221dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="TODO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tytul"
        app:srcCompat="@drawable/about_pic" />


    <!--    footer    -->
    <TextView
        android:id="@+id/txtOpis"
        android:layout_width="374dp"
        android:layout_height="298dp"
        android:layout_marginTop="18dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="5sp"
        android:text="Teatr Powszechny w Łodzi jest jedną z niewielu scen w całości poświęconych przedstawieniom komediowym. Historia placówki sięga roku 1945 co sprawia że jest to jeden z najdłużej działających teatrów na terenie miasta. Wśród mieszkańców Łodzi Teatr jest znany z organizowania szeregu imprez i wydarzeń mających na celu popularyzację sztuki teatralnej wśród społeczeństwa np. spektakle dla osób bezrobotnych czy emerytów a także dla dzieci i młodzieży. W placówce działa jedyny w Polsce Teatr dla osób niewidomych i słabo widzących oraz jest cyklicznie organizowany Międzynarodowy Festiwal Sztuk Przyjemnych i Nieprzyjemnych przyciągający artystów z całego świata."
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/rectangle_floor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_about_pic"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/rectangle_floor"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:background="#009688"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@+id/txtOpis"
        tools:layout_editor_absoluteX="370dp" />

    <ImageView
        android:id="@+id/home_icon"
        android:layout_width="43dp"
        android:layout_height="34dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rectangle_floor"
        app:srcCompat="@drawable/home_icon" />

    <TextView
        android:id="@+id/adres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="3dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="3dp"
        android:text="Legionów 21, 91-069 Łódź"
        android:clickable="true"
        android:focusable="true"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_icon" />

    <ImageView
        android:id="@+id/mail_icon"
        android:layout_width="43dp"
        android:layout_height="34dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/adres"
        app:srcCompat="@drawable/mail_icon" />

    <TextView
        android:id="@+id/mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="3dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="3dp"
        android:text="moj@teatr.pl"
        android:autoLink="email"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mail_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
